<%= form_for(@message) do |f| %>
	
	<div class="row">
		<div class="col-sm-4">
			<%= f.text_field :sender, class: "form-control", placeholder: "Sender" %>
			<%= f.text_field :file, class: "form-control", placeholder: "file" %>
		</div>
		<div class="col-sm-4">
			<%= f.text_field :recipient, class: "form-control", placeholder: "Recipient" %>
			<%= f.text_field :mtype, class: "form-control", placeholder: "Message Type (DM or Group)" %>
		</div>
		<div class="col-sm-4">
			<%= f.label "Read?" %>
			<%= f.check_box :read, class: "form-control", placeholder: "Read?" %>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-10">
			<%= f.text_field :message, class: "form-control", placeholder: "Message Content" %>
		</div>
		<div class="col-sm-5">
			<div class="button-container">
				<div class="row">
					<div class="col-sm-12">
						<%= f.submit "Create", class: "create button" %>
					</div>
				</div>
			</div>
		</div>
	</div>

<% end %>